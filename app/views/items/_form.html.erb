<div class="row">
  <%= form_for @item do |f| %>
    <div class="form-group col-md-7">
      <%= f.text_field :name, class: 'form-control', placeholder: "Enter to-do name" %>
    </div>
    <div class="form-group col-md-1">
      <%= f.submit "Save", class: 'btn btn-primary todo-submit' %>
    </div>
  <% end %>
</div>
